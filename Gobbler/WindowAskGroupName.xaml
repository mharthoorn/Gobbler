<Window x:Class="Gobbler.WindowAskFolderName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Group" Height="165" Width="347"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" 
        FocusManager.FocusedElement="{Binding ElementName=edtGroup}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="20">
            <TextBlock Text="Group name" />
            <TextBox Name="edtGroup" />

        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="24, 12, 24, 12">
            <Button IsDefault="True" Click="ClickOk" Width="60">OK</Button>
        </StackPanel>

    </Grid>
</Window>